{
  "name": "api.tinycardo.com",
  "version": "0.1.0",
  "description": "A modern, scalable REST API for flashcard learning and spaced repetition, built with NestJS and TypeScript",
  "author": "Kevin Marques",
  "private": false,
  "license": "MIT",
  "homepage": "https://github.com/marques-kevin/api.tinycardo.com#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marques-kevin/api.tinycardo.com.git"
  },
  "bugs": {
    "url": "https://github.com/marques-kevin/api.tinycardo.com/issues"
  },
  "keywords": [
    "flashcards",
    "spaced-repetition",
    "learning",
    "education",
    "nestjs",
    "typescript",
    "api",
    "rest",
    "postgresql",
    "jwt",
    "education-technology"
  ],
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "NODE_ENV=development nest start --watch",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest --config ./jest.unit.json --maxWorkers=1",
    "test:int": "jest --config ./jest.int.json --maxWorkers=1",
    "test:int:watch": "jest --config ./jest.int.json --watch --maxWorkers=1",
    "test:unit": "jest --config ./jest.unit.json --maxWorkers=1",
    "test:unit:watch": "jest --config ./jest.unit.json --watch --maxWorkers=1",
    "migration:create": "ts-node ./node_modules/.bin/typeorm migration:create",
    "migration:test": "NODE_ENV=test dotenv -e .env.test -- ts-node ./node_modules/.bin/typeorm migration:run -d src/config/migration_config.ts",
    "migration:run:production": "ts-node ./node_modules/.bin/typeorm migration:run -d src/config/migration_config.ts",
    "openapi:generate": "npx openapi-typescript http://localhost:3000/api-json -o ./src/types/api.ts"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.50",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "@types/passport-jwt": "^4.0.1",
    "ai": "^5.0.68",
    "axios": "^1.12.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^10.0.0",
    "googleapis": "^161.0.0",
    "nestjs-zod": "^5.0.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "pm2-runtime": "^5.4.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.27",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
